@model ASPFlightManager.Views.Reservations.IndexModel

@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                SecondName
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Reservations[0].LastName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EmailSort">
                    @Html.DisplayNameFor(model => model.Reservations[0].Email)
                </a>
            </th>
            <th>
                SSN
            </th>
            <th>
               PhoneNumber
            </th>
            <th>
                Nationality
            </th>
            <th>
                TicketType
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reservations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SSN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType)
                </td>
                <td style="display: flex; gap: 0.5em; justify-content: center; align-items: center; ">
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li style="list-style-type:none">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               style="list-style-type: none; border: solid; border-color: black; border-width: 1px; border-radius: 4px; padding: 5px; color: black">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               style="list-style-type: none; border: solid; border-color: black; border-width: 1px; border-radius: 4px; padding: 5px; color: black">Delete</a>
                        </li>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id"
                       style="list-style-type: none; border: solid; border-color: black; border-width: 1px; border-radius: 4px; padding: 4.2px; color: black">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>


