@model IEnumerable<Data.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Flights</h1>

@if (this.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<div style=" display: flex; justify-content: center; align-items: center;">

    <img src="https://media2.giphy.com/media/l2Sq87bt4GOdAnlGo/giphy.gif?cid=6c09b95212kqjuoh07dtbffjxgseqpjiekxjyctmwgul3r21&ep=v1_internal_gif_by_id&rid=giphy.gif&ct=g" alt="Alternate Text" />
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapacityVIP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PilotName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapacityVIP)
                </td>
                <td style="
                    display: flex;
                    flex-wrap: wrap;
                    gap: 0.5em;
                    justify-content: space-between
                    ">
                    @if (this.User.IsInRole("Admin")) { <li style="list-style-type:none">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               style="list-style-type: none; border: solid; border-color: black; border-width: 1px; border-radius: 4px; padding: 5px; color: black">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               style="list-style-type: none; border: solid; border-color: black; border-width: 1px; border-radius: 4px; padding: 5px; color: black">Delete</a>
                        </li>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id"
                       style="list-style-type:none; border:solid; border-color: black; border-width:1px;border-radius:4px;padding:5px; color:black">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
